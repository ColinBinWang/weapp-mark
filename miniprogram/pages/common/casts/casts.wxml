<template name='item-casts'>
  <view class='casts-item'>
    <view class='item-container'>
      <image class='avatar' src='{{item.avatars.medium}}' />
      <view class='item-casts-name'>
        <text class='single-line'>{{item.name}}</text>
        <text class='single-line'>{{isDirec?"导演":"饰"}}</text>
      </view>
    </view>
  </view>
</template>

<template name='item-cast'>
  <view class='casts-item'>
    <view class='item-container'>
      <image class='avatar' src='{{item.avatar}}' />
      <view class='item-casts-name'>
        <text class='single-line'>{{item.name}}</text>
        <text class='single-line'>{{item.type === "Director" ? "导演" : item.role ? "饰: " + item.role : ""}}</text>
      </view>
    </view>
  </view>
</template>

<template name='item-casts-all'>
  <view class='casts-item'>
    <view class='item-all'>
      <text>全部</text>
      <text>00人</text>
    </view>
  </view>
</template>